<div class="panel panel-default">
  <div class="panel-heading">Confirmação de Tarifas</div>
  <div class="panel-body">
    <div class="table-responsive">
      <table id="list_table_price" class="table table-striped">
        <thead>
          <tr>
            <th>ID</th>
            <th>Origem</th>
            <th>Destino</th>
            <th>Valor</th>
            <% if current_user.admin? %>
              <th>Options</th>
            <% end %>
          </tr>
        </thead>

        <tbody>
          <% @table_prices.each do |table_price| %>
            <tr>
              <td><%= table_price.id %></td>
              <td><%= link_to table_price.origin.name, table_price.origin %></td>
              <td><%= link_to table_price.target.name, table_price.target %></td>
              <td><%= table_price.price.to_f %></td>
              <% if current_user.admin? %>
                <td><%= link_to("Confirmar", "#", class: 'btn btn-success btn-sm' )%></td>
              <% end %>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>    
</div>
