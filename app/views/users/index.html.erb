<h2>Listing all users</h2>
<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Type</th>
      <th>Status</th>
      <th>Show</th>
      <th>Edit</th>
      <th>Delete</th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
    <tr>
      <td><%= user.email %></td>
      <td><%= link_to "Show <i class='glyphicon glyphicon-info-sign'></i>".html_safe, user %></td>
      <td><%= link_to "Edit <i class='glyphicon glyphicon-edit'></i>".html_safe, edit_user_path(user) %></td>
      <td><%= link_to "Destroy <i class='glyphicon glyphicon-trash'></i>".html_safe, user, :method => :delete, :data => { :confirm => "Are you sure to delete?" } %></td>
    </tr>
    <% end %>
  </tbody>
</table>
<%= link_to 'New User', new_user_path %>
</div>