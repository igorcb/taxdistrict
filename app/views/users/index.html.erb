<div class="panel panel-default">
  <div class="panel-heading">Listagem de Usu√°rios</div>
  <div class="panel-body">
    <%= link_to 'Novo Usuario', new_user_path, class: "btn btn-primary btn-lg btn-block" %>
    <div class="table-responsive">
      <table id="list_table_price" class="table table-striped">
        <thead>
          <tr>
            <th>Email</th>
            <th>Admin</th>
            <th colspan="3">Options</th>
          </tr>
        </thead>

        <tbody>
          <% @users.each do |user| %>
            <tr>
              <td><%= link_to user.email, user  %></td>
              <td><%= user.admin  %></td>
              <td><%= link_to 'Edit', edit_user_path(user), class: "btn btn-primary btn-sm" %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>    
  </div>
</div>
