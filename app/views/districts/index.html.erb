

<div class="panel panel-default">
  <div class="panel-heading">Listagem de Bairros</div>
  <div class="panel-body">
    <%= link_to 'Novo Bairro', new_district_path, class: "btn btn-primary btn-lg btn-block" %>
    <div class="table-responsive">
      <table id="list_table_price" class="table table-striped">
        <thead>
          <tr>
            <th>Name</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @districts.each do |district| %>
            <tr>
              <td><%= district.name %></td>
              <td><%= link_to 'Show', district %></td>
              <td><%= link_to 'Edit', edit_district_path(district) %></td>
              <td><%= link_to 'Destroy', district, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>    
  </div>
</div>
